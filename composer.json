{
  "name": "scaleum/framework",
  "type": "library",
  "description": "Scaleum: The Power of Scalability and Adaptive Solutions",
  "license": "MIT",
  "authors": [
    {
      "name": "Maxim Kirichenko (informax)",
      "email": "kirichenko.maxim@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "ext-pdo": "*",
    "ext-json": "*",
    "ext-curl": "*",
    "ext-mbstring": "*",
    "psr/log": "^3.0",
    "psr/container": "^2.0",
    "psr/http-message": "^1.0 || ^2.0",
    "psr/http-server-handler": "^1.0",
    "psr/http-server-middleware": "^1.0"
  },
  "archive": {
    "exclude": [
      "docs",
      "tests",
      ".gitignore",
      ".github",
      "phpunit.xml"
    ]
  },  
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "autoload": {
    "files": [],
    "psr-4": {
      "Scaleum\\": "src/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
